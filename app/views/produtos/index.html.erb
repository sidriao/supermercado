<h1>Listando Produtos</h1>

<table class="table table-stripped">
  <tr>
    <th>Nome</th>
    <th>Unidade medida</th>
    <th>Grupo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @produtos.each do |produto| %>
  <tr>
    <td><%= produto.nome %></td>
    <td><%= produto.unidade_medida.nome %></td>
    <td><%= produto.grupo.nome %></td>
    <td><%= link_to 'Exibir', produto %></td>
    <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
    <td><%= link_to 'Deletar', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

