<h1>Listando Item Compras</h1>

<table class="table table-stripped">
  <tr>
    <th>Produto</th>
    <th>Quantidade</th>
    <th>Preco</th>
    <th>Preco Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @item_compras.each do |item_compra| %>
  <tr>
    <td><%= item_compra.produto.nome %></td>
    <td><%= item_compra.quantidade %> em <%= item_compra.produto.unidade_medida.nome %></td>
    <td><%= number_to_currency(item_compra.preco) %></td>
    <td><%= number_to_currency(item_compra.preco * item_compra.quantidade) %></td>
    <td><%= link_to 'Exibir', item_compra %></td>
    <td><%= link_to 'Editar', edit_item_compra_path(item_compra) %></td>
    <td><%= link_to 'Excluir', item_compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

